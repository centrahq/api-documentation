{% block navigation_search %}
    <div class="navigation-search" id="search">
        <forma class="navigation-search__form">
            <input
              class="navigation-search__input"
              type="search" id="site-search"
              name="q"
              placeholder='{{ grav.theme.config.site_version is same as("api-doc") ? "Search Centra Developers" : "Search Centra Support" }}'
              onkeydown = "if (event.keyCode == 13) document.getElementById('navigation-search-button').click()"
            >
            <button class="navigation-search__submit-button" type="submit" id="navigation-search-button" onclick="redirectToSearchPage()"/>
        </forma>
    </div>
    {% set dev_background =
        '<div class="navigation-background" id="navigation-background">
            <div class="navigation-background__slider"></div>
            <div class="navigation-background__stack"></div>
            <div class="navigation-background__smile"></div>
            <div class="navigation-background__hand"></div>
            <div class="navigation-background__circle-outlined"></div>
        </div>'
    %}
    {% set support_background =
        '<div class="navigation-background support-navigation-background support" id="navigation-background">
            <div class="navigation-background__hand"></div>
            <div class="navigation-background__smile-blue"></div>
            <div class="navigation-background__human"></div>
        </div>'
    %}
    {{ grav.theme.config.site_version is same as("api-doc") ? dev_background : support_background }}
{% endblock %}
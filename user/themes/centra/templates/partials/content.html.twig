<article class="main__content-article">
    <div class="main-article-content">
        <header>
            <div>
                <h1>{{ page.title }}</h1>
                <time datetime="{{ page.date | date('Y-m-d') }}">Last updated {{ page.date | date(system.dateformat.short) }}</time>
            </div>
        </header>
        <p>
            {{ page.content }}
        </p>
    </div>
</article>
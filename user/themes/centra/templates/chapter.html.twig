{% extends 'partials/base.html.twig' %}

{% block beforecontent %}
    {% include 'partials/sidenav.html.twig' %}
{% endblock %}
{% block content %}
    <div class="main__content">
        <div class="articles__listing">
            <h1>{{page.title}}</h1>
            <hr/>
            {% for p in page.children.visible %}
                <article>
                    <h2>{{ p.menu }}</h2>
                    <p>{{ p.header.excerpt ? p.header.excerpt : p.summary(230) }}</p>
                    <a href="{{ p.url }}">Browse article</a>
                </article>
            {% endfor %}
        </div>
        {% include 'partials/arrownav.html.twig' %}
    </div>
{% endblock %}
{% block aftercontent %}
    <div class="page-toc">
    </div>
{% endblock %}